#!/bin/bash
# =============================================================================
# pre-push hook - ãƒ—ãƒƒã‚·ãƒ¥å‰ã®ãƒ–ãƒ©ãƒ³ãƒé‹ç”¨ãƒã‚§ãƒƒã‚¯
# =============================================================================

set -e

# è‰²ã®å®šç¾©
RED='\033[0;31m'
YELLOW='\033[0;33m'
GREEN='\033[0;32m'
NC='\033[0m' # No Color

current_branch=$(git rev-parse --abbrev-ref HEAD)

echo "ğŸ” ãƒ–ãƒ©ãƒ³ãƒé‹ç”¨ãƒã‚§ãƒƒã‚¯: $current_branch"

# -----------------------------------------------------------------------------
# 1. ãƒ–ãƒ©ãƒ³ãƒåã®æ¤œè¨¼
# -----------------------------------------------------------------------------
valid_patterns=(
  "^main$"
  "^develop$"
  "^staging$"
  "^staging-#[0-9]+$"
  "^feature/issue-#[0-9]+(-.*)?$"
)

is_valid=false
for pattern in "${valid_patterns[@]}"; do
  if [[ "$current_branch" =~ $pattern ]]; then
    is_valid=true
    break
  fi
done

if [[ "$is_valid" == false ]]; then
  echo -e "${RED}âŒ Error: ãƒ–ãƒ©ãƒ³ãƒåãŒå‘½åè¦å‰‡ã«å¾“ã£ã¦ã„ã¾ã›ã‚“${NC}"
  echo "   ç¾åœ¨: $current_branch"
  echo ""
  echo "   è¨±å¯ã•ã‚Œã‚‹ãƒ‘ã‚¿ãƒ¼ãƒ³:"
  echo "   - main"
  echo "   - develop"
  echo "   - staging"
  echo "   - staging-#{PRç•ªå·}  (ä¾‹: staging-#4)"
  echo "   - feature/issue-#{issueç•ªå·}  (ä¾‹: feature/issue-#123)"
  echo "   - feature/issue-#{issueç•ªå·}-{èª¬æ˜}  (ä¾‹: feature/issue-#123-add-login)"
  exit 1
fi

echo -e "${GREEN}âœ“${NC} ãƒ–ãƒ©ãƒ³ãƒå: OK"

# -----------------------------------------------------------------------------
# 2. featureãƒ–ãƒ©ãƒ³ãƒã®åˆ†å²å…ƒãƒã‚§ãƒƒã‚¯
# -----------------------------------------------------------------------------
if [[ "$current_branch" =~ ^feature/issue-#[0-9]+ ]]; then
  # ãƒªãƒ¢ãƒ¼ãƒˆã®developã‚’å–å¾—
  git fetch origin develop --quiet 2>/dev/null || true

  if git rev-parse origin/develop >/dev/null 2>&1; then
    merge_base=$(git merge-base HEAD origin/develop 2>/dev/null || echo "")
    develop_head=$(git rev-parse origin/develop 2>/dev/null || echo "")

    if [[ -n "$merge_base" && -n "$develop_head" ]]; then
      # developã®æœ€æ–°ã‚³ãƒŸãƒƒãƒˆãŒç¥–å…ˆã«å«ã¾ã‚Œã¦ã„ã‚‹ã‹ãƒã‚§ãƒƒã‚¯
      if ! git merge-base --is-ancestor origin/develop HEAD 2>/dev/null; then
        # åˆ†å²ç‚¹ã‹ã‚‰developãŒã©ã‚Œã ã‘é€²ã‚“ã§ã„ã‚‹ã‹
        behind_count=$(git rev-list --count "$merge_base..origin/develop" 2>/dev/null || echo "0")

        if [[ "$behind_count" -gt 0 ]]; then
          echo -e "${YELLOW}âš ï¸  Warning: developãƒ–ãƒ©ãƒ³ãƒã‹ã‚‰ ${behind_count} ã‚³ãƒŸãƒƒãƒˆé…ã‚Œã¦ã„ã¾ã™${NC}"
          echo "   æœ€æ–°ã®developã‚’å–ã‚Šè¾¼ã‚€ã“ã¨ã‚’æ¤œè¨ã—ã¦ãã ã•ã„:"
          echo "   git fetch origin develop && git rebase origin/develop"
        fi
      else
        echo -e "${GREEN}âœ“${NC} developåˆ†å²: æœ€æ–°"
      fi
    fi
  fi
fi

# -----------------------------------------------------------------------------
# 3. ç›´æ¥ãƒ—ãƒƒã‚·ãƒ¥ã®ç¦æ­¢ãƒã‚§ãƒƒã‚¯
# -----------------------------------------------------------------------------
protected_branches=("main" "develop")

for protected in "${protected_branches[@]}"; do
  if [[ "$current_branch" == "$protected" ]]; then
    echo -e "${YELLOW}âš ï¸  Warning: ${protected} ã¸ã®ç›´æ¥ãƒ—ãƒƒã‚·ãƒ¥ã¯æ¨å¥¨ã•ã‚Œã¾ã›ã‚“${NC}"
    echo "   PRã‚’é€šã˜ã¦ãƒãƒ¼ã‚¸ã—ã¦ãã ã•ã„"
    # exit 1  # å³æ ¼ã«ã™ã‚‹å ´åˆã¯ã‚³ãƒ¡ãƒ³ãƒˆã‚’å¤–ã™
  fi
done

# -----------------------------------------------------------------------------
# 4. stagingãƒ—ãƒ¬ãƒ¼ã‚¹ãƒ›ãƒ«ãƒ€ãƒ¼ã¸ã®ãƒ—ãƒƒã‚·ãƒ¥ç¦æ­¢
# -----------------------------------------------------------------------------
if [[ "$current_branch" == "staging" ]]; then
  echo -e "${RED}âŒ Error: staging (ãƒ—ãƒ¬ãƒ¼ã‚¹ãƒ›ãƒ«ãƒ€ãƒ¼) ã¸ã®ç›´æ¥ãƒ—ãƒƒã‚·ãƒ¥ã¯ç¦æ­¢ã•ã‚Œã¦ã„ã¾ã™${NC}"
  echo "   staging-#{PRç•ªå·} ãƒ–ãƒ©ãƒ³ãƒã‚’ä½¿ç”¨ã—ã¦ãã ã•ã„"
  exit 1
fi

echo ""
echo -e "${GREEN}âœ… ãƒ–ãƒ©ãƒ³ãƒé‹ç”¨ãƒã‚§ãƒƒã‚¯: ã™ã¹ã¦ãƒ‘ã‚¹${NC}"
exit 0
