#!/bin/bash
# =============================================================================
# pre-push hook - プッシュ前のブランチ運用チェック
# =============================================================================

set -e

# 色の定義
RED='\033[0;31m'
YELLOW='\033[0;33m'
GREEN='\033[0;32m'
NC='\033[0m' # No Color

current_branch=$(git rev-parse --abbrev-ref HEAD)

echo "🔍 ブランチ運用チェック: $current_branch"

# -----------------------------------------------------------------------------
# 1. ブランチ名の検証
# -----------------------------------------------------------------------------
valid_patterns=(
  "^main$"
  "^staging-#[0-9]+$"
  "^feature/issue-#[0-9]+(-.*)?$"
)

is_valid=false
for pattern in "${valid_patterns[@]}"; do
  if [[ "$current_branch" =~ $pattern ]]; then
    is_valid=true
    break
  fi
done

if [[ "$is_valid" == false ]]; then
  echo -e "${RED}❌ Error: ブランチ名が命名規則に従っていません${NC}"
  echo "   現在: $current_branch"
  echo ""
  echo "   許可されるパターン:"
  echo "   - main"
  echo "   - staging-#{PR番号}  (例: staging-#4)"
  echo "   - feature/issue-#{issue番号}  (例: feature/issue-#123)"
  echo "   - feature/issue-#{issue番号}-{説明}  (例: feature/issue-#123-add-login)"
  exit 1
fi

echo -e "${GREEN}✓${NC} ブランチ名: OK"

# -----------------------------------------------------------------------------
# 2. featureブランチの分岐元チェック
# -----------------------------------------------------------------------------
if [[ "$current_branch" =~ ^feature/issue-#[0-9]+ ]]; then
  # リモートのmainを取得
  git fetch origin main --quiet 2>/dev/null || true

  if git rev-parse origin/main >/dev/null 2>&1; then
    merge_base=$(git merge-base HEAD origin/main 2>/dev/null || echo "")
    main_head=$(git rev-parse origin/main 2>/dev/null || echo "")

    if [[ -n "$merge_base" && -n "$main_head" ]]; then
      # mainの最新コミットが祖先に含まれているかチェック
      if ! git merge-base --is-ancestor origin/main HEAD 2>/dev/null; then
        # 分岐点からmainがどれだけ進んでいるか
        behind_count=$(git rev-list --count "$merge_base..origin/main" 2>/dev/null || echo "0")

        if [[ "$behind_count" -gt 0 ]]; then
          echo -e "${YELLOW}⚠️  Warning: mainブランチから ${behind_count} コミット遅れています${NC}"
          echo "   最新のmainを取り込むことを検討してください:"
          echo "   git fetch origin main && git rebase origin/main"
        fi
      else
        echo -e "${GREEN}✓${NC} main分岐: 最新"
      fi
    fi
  fi
fi

# -----------------------------------------------------------------------------
# 3. 直接プッシュの禁止チェック
# -----------------------------------------------------------------------------
if [[ "$current_branch" == "main" ]]; then
  echo -e "${YELLOW}⚠️  Warning: main への直接プッシュは推奨されません${NC}"
  echo "   PRを通じてマージしてください"
  # exit 1  # 厳格にする場合はコメントを外す
fi

echo ""
echo -e "${GREEN}✅ ブランチ運用チェック: すべてパス${NC}"
exit 0
